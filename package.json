{
  "name": "edi-doctor",
  "displayName": "EDI Doctor",
  "description": "Tools for editing and visualising EDI files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:edi-doctor.helloWorld",
    "onCommand:edi-doctor.refresh"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "edi",
        "aliases": [
          "EDI",
          "edi"
        ],
        "extensions": [
          "edi",
          "x12"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "edi",
        "scopeName": "source.edi",
        "path": "./syntaxes/edi.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "edi-doctor.ediVisualize",
        "title": "Visualize EDI File"
      },
      {
        "command": "edi-doctor.refresh",
        "title": "Refresh WebView"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "rollup -c && webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.7",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^10.0.1",
    "@tsconfig/svelte": "^3.0.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "carbon-components-svelte": "^0.70.13",
    "carbon-preprocess-svelte": "^0.9.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "rollup": "^2.79.1",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.55.0",
    "svelte-check": "^2.10.2",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  }
}
